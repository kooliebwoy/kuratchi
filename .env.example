# Cloudflare API credentials
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=

# Workers subdomain (e.g. acct.workers.dev)
CLOUDFLARE_WORKERS_SUBDOMAIN=

# Admin D1 (strict env for SvelteKit handle)
KURATCHI_ADMIN_DB_NAME=
KURATCHI_ADMIN_DB_TOKEN=

# Kuratchi Auth
# Used as the pepper for password hashing and to encrypt/decrypt opaque session cookies
KURATCHI_AUTH_SECRET=


# Email (Resend)
# Preferred names; fall back to the unprefixed variants if set.
RESEND_EMAIL_API_KEY=
RESEND_API_KEY=
KURATCHI_EMAIL_FROM=
EMAIL_FROM=

# App origin (must match your deployed origin; used for callbacks and links)
ORIGIN=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Optional webhook secret for custom auth/webhook handlers
AUTH_WEBHOOK_SECRET=

