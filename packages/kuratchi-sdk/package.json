{
	"name": "kuratchi-sdk",
	"version": "0.0.8",
	"bin": {
		"kuratchi-sdk": "bin/kuratchi-sdk.mjs"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"lint": "eslint . --ext .ts,.svelte",
		"type-check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"clean": "rimraf dist .svelte-kit",
		"cli": "node bin/kuratchi-sdk.mjs"
	},
	"files": [
		"dist",
		"src",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./src/lib/index.ts",
	"types": "./src/lib/index.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./src/lib/index.ts",
			"svelte": "./src/lib/index.ts",
			"default": "./src/lib/index.ts"
		},
		"./auth": {
			"types": "./src/lib/auth/index.ts",
			"svelte": "./src/lib/auth/index.ts",
			"default": "./src/lib/auth/index.ts"
		},
		"./database": {
			"types": "./src/lib/database/index.ts",
			"svelte": "./src/lib/database/index.ts",
			"default": "./src/lib/database/index.ts"
		},
		"./kv": {
			"types": "./src/lib/kv/index.ts",
			"svelte": "./src/lib/kv/index.ts",
			"default": "./src/lib/kv/index.ts"
		},
		"./r2": {
			"types": "./src/lib/r2/index.ts",
			"svelte": "./src/lib/r2/index.ts",
			"default": "./src/lib/r2/index.ts"
		},
		"./orm": {
			"types": "./src/lib/orm/index.ts",
			"svelte": "./src/lib/orm/index.ts",
			"default": "./src/lib/orm/index.ts"
		},
		"./domains": {
			"types": "./src/lib/domains/index.ts",
			"svelte": "./src/lib/domains/index.ts",
			"default": "./src/lib/domains/index.ts"
		},
		"./email": {
			"types": "./src/lib/email/index.ts",
			"svelte": "./src/lib/email/index.ts",
			"default": "./src/lib/email/index.ts"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"peerDependenciesMeta": {
		"valibot": {
			"optional": true
		}
	},
	"devDependencies": {
		"@kuratchi/config-eslint": "workspace:*",
		"@kuratchi/config-typescript": "workspace:*",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.43.6",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/node": "^24.3.0",
		"eslint": "^9.18.0",
		"publint": "^0.3.2",
		"rimraf": "^6.0.1",
		"svelte": "^5.39.7",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"valibot": "^1.1.0",
		"vite": "^7.0.4",
		"vitest": "^3.2.3"
	},
	"keywords": [
		"svelte"
	],
	"dependencies": {
		"@sveltejs/adapter-cloudflare": "^7.2.3",
		"cloudflare": "^5.2.0",
		"resend": "^4.8.0",
		"stripe": "^19.1.0",
		"tsx": "^4.19.2"
	}
}
