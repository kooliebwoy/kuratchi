{
  "name": "@kuratchi/editor",
  "version": "0.0.1",
  "description": "Core Kuratchi editor building blocks for the Kuratchi SDK",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run prepack",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint . --ext .ts,.svelte",
    "prepack": "svelte-kit sync && svelte-package"
  },
  "exports": {
    ".": {
      "types": "./src/lib/index.ts",
      "svelte": "./src/lib/index.ts",
      "default": "./src/lib/index.ts"
    },
    "./plugins/BlogManager.svelte": {
      "svelte": "./src/lib/plugins/BlogManager.svelte",
      "default": "./src/lib/plugins/BlogManager.svelte"
    },
    "./plugins/blog/blogThemes": {
      "types": "./src/lib/plugins/blog/blogThemes.ts",
      "default": "./src/lib/plugins/blog/blogThemes.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*",
    "!src/**/*.test.*",
    "!src/**/*.spec.*"
  ],
  "svelte": "./src/lib/index.ts",
  "types": "./src/lib/index.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "keywords": [
    "svelte",
    "sveltekit",
    "kuratchi",
    "editor"
  ],
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@kuratchi/config-eslint": "workspace:*",
    "@kuratchi/config-typescript": "workspace:*",
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "^2.43.6",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/node": "^24.3.0",
    "eslint": "^9.18.0",
    "svelte": "^5.39.7",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.0.4"
  },
  "dependencies": {
    "@kuratchi/ui": "workspace:*",
    "@lucide/svelte": "^0.552.0"
  }
}
