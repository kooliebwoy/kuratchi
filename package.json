{
  "name": "kuratchi",
  "private": true,
  "version": "0.0.0",
  "description": "Supabase-like platform for SvelteKit and Cloudflare Workers",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:backend": "turbo run dev --filter=backend",
    "dev:dashboard": "turbo run dev --filter=@kuratchi/dashboard",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "deploy:spaces": "pnpm --filter kuratchi-sdk deploy:spaces"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3"
  },
  "packageManager": "pnpm@10.18.1",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}