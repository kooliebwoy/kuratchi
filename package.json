{
	"name": "kuratchi-sdk",
	"version": "0.0.8",
	"bin": {
		"kuratchi-sdk": "bin/kuratchi-sdk.mjs"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"cli": "node bin/kuratchi-sdk.mjs"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./auth": {
			"types": "./dist/auth/index-v2.d.ts",
			"svelte": "./dist/auth/index-v2.js"
		},
		"./database": {
			"types": "./dist/database/index.d.ts",
			"svelte": "./dist/database/index.js"
		},
		"./kv": {
			"types": "./dist/kv/index.d.ts",
			"svelte": "./dist/kv/index.js"
		},
		"./r2": {
			"types": "./dist/r2/index.d.ts",
			"svelte": "./dist/r2/index.js"
		},
		"./d1": {
			"types": "./dist/d1/index.d.ts",
			"svelte": "./dist/d1/index.js"
		},
		"./orm": {
			"types": "./dist/orm/index.d.ts",
			"svelte": "./dist/orm/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"peerDependenciesMeta": {
		"valibot": {
			"optional": true
		}
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.43.6",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/node": "^24.3.0",
		"publint": "^0.3.2",
		"svelte": "^5.39.7",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"valibot": "^1.1.0",
		"vite": "^7.0.4",
		"vitest": "^3.2.3"
	},
	"keywords": [
		"svelte"
	],
	"dependencies": {
		"@sveltejs/adapter-cloudflare": "^7.2.3"
	}
}
